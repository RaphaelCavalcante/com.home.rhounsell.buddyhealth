<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.home.rhounsell.buddyhealth.Pet" table="pet" catalog="buddyhealthdb">
		<id name="id" type="java.lang.Integer">
			<column name="ID"/>
			<generator class="identity"/>
		</id>
		<property name="name" type="string">
			<column name="name" length="255" not-null="true" unique="true"></column>
		</property>
		<property name="age" type="java.lang.Integer">
			<column name="age" not-null="true"></column>
		</property>
		<set name="medicineRegistry" table="medicine" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="MEDICINE_ID" not-null="true"/>
			</key>
			<one-to-many class="com.home.rhounsell.buddyhealth.Medicine"/>
		</set>
		<set name="historyRegistry" table="history" inverse="true" fetch="select">
			<key>
				<column name="HISTORY_ID" not-null="true"/>
			</key>
			<one-to-many class="com.home.rhounsell.buddyhealth.History"/>
		</set>
	</class>
</hibernate-mapping>