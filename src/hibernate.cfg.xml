<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	 "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">passwd123</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/buddyhealth?serverTimezone=UTC</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="show_sql">true</property>

  		<mapping class="com.home.rhounsell.buddyhealth.model.Pet"/>
  		<mapping class="com.home.rhounsell.buddyhealth.model.Owner"/>
  		<mapping class="com.home.rhounsell.buddyhealth.model.Medicine"/> 
		
	</session-factory>
</hibernate-configuration>
